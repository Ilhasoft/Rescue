<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="#f7f7f7" 
	android:id="@+id/layout">
	
	<FrameLayout
	    android:id="@+id/top"
        android:orientation="horizontal" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
	    
	    <SurfaceView 
	        android:id="@+id/preview"
			android:layout_width="300dp"
			android:layout_height="300dp"
			android:layout_gravity="center">
		</SurfaceView>
		
	    <View 
	        android:id="@+id/frontView"
	        android:layout_width="300dp"
	        android:layout_height="300dp"
	        android:background="#db5436"
	        android:layout_gravity="center"
	        android:visibility="gone"
	        />
	    
	    <ImageView
	        android:id="@+id/ivFrontCam"
	        android:layout_width="334dp"
	        android:layout_height="582dp"
	        android:scaleX="1"
	        android:scaleY="1"
	        android:layout_gravity="center"
	        android:background="@drawable/fundo_bpm" />
	    
		<ImageView 
	        android:layout_width="200.25dp"
	        android:layout_height="111.75dp"
	        android:layout_marginTop="10dp"
	        android:layout_gravity="center_horizontal"
	        android:background="@drawable/tutorial_heart"/>
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:orientation="vertical">
	        
	        <TextView
	            android:id="@+id/text"
	            android:text="@string/default_text"
	            android:layout_gravity="center"
	            android:textSize="50sp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#fff" />
	        
	        <TextView
	            android:id="@+id/textTitle"
	            android:text="BPM"
	            android:layout_gravity="center"
	            android:textSize="30sp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#fff" />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_marginTop="115dp"
	        android:orientation="horizontal">
	        
	        <ImageView
	            android:id="@+id/ivCircle01" 
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:background="@drawable/circle_progress_background"/>
	        
	        <ImageView
	            android:id="@+id/ivCircle02" 
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:layout_marginLeft="10dp"
	            android:background="@drawable/circle_progress_background"/>
	        
	        <ImageView
	            android:id="@+id/ivCircle03" 
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:layout_marginLeft="10dp"
	            android:background="@drawable/circle_progress_background"/>
	        
	        <ImageView
	            android:id="@+id/ivCircle04" 
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:layout_marginLeft="10dp"
	            android:background="@drawable/circle_progress_background"/>
	        
	    </LinearLayout>
	    
	    <LinearLayout
            android:id="@+id/llButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dp" >

            <FrameLayout
                android:id="@+id/flRepeat"
                android:layout_width="100dp"
                android:layout_height="100dp" 
                android:translationY="200dp">

                <Button
                    android:id="@+id/btRepeat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circlebackground" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:text="@string/button_repeat"
                        android:textColor="#fff"
                        android:textSize="20sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/flSend"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="50dp" 
                android:translationY="200dp">

                <Button
                    android:id="@+id/btSend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circlebackground" />
                
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:text="@string/button_send"
                        android:textColor="#fff"
                        android:textSize="20sp" />
                    
            </FrameLayout>
        </LinearLayout>
        
